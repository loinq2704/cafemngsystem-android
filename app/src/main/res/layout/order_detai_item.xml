<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageViewDrink"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewDrinkName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Caramel Macchiato"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageViewDrink"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewDrinkSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size: Medium"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/textViewDrinkName"
            app:layout_constraintTop_toBottomOf="@id/textViewDrinkName" />

        <TextView
            android:id="@+id/textViewDrinkToppings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toppings: Caramel, Sugar, Foam"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/textViewDrinkSize"
            app:layout_constraintTop_toBottomOf="@id/textViewDrinkSize" />

        <TextView
            android:id="@+id/textViewDrinkQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity: 1"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewDrinkToppings" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>