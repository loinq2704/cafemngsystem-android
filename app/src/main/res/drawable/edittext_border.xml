<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/edittext_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the border color and width -->
    <solid android:color="#FFFFFF" /> <!-- Background color inside the border, change if needed -->
    <stroke
        android:width="2dp"
        android:color="#000000" /> <!-- Border color (red in this case) and width -->
    <corners android:radius="8dp" /> <!-- Optional: corner radius for rounded edges -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" /> <!-- Optional: padding inside the EditText -->
</shape>
